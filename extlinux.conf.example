default l0
menu title U-Boot menu
prompt 1
timeout 1


label l0
        menu label Arch Testing mnt-reform-arm64
        linux /Image-testing
        initrd /initramfs-linux-testing
        fdt /imx8mp-mnt-pocket-reform.dtb

        append   ro root=/dev/nvme0n1p1 no_console_suspend cryptomgr.notests ${bootargs} console=tty1 loglevel=3

label l0r
        menu label Arch Testing mnt-reform-arm64 (rescue target)
        linux /Image-old
        initrd /initramfs-linux-old
        fdt /imx8mp-mnt-pocket-reform-old.dtb
        append   ro root=/dev/nvme0n1p1 no_console_suspend cryptomgr.notests ${bootargs} console=tty1 loglevel=3

